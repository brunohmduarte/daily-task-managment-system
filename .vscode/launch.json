        {
            "name": "Xdebug - PHP 5.6",
            "type": "php",
            "request": "launch",
            "port": 9056,
            "pathMappings": {
                "/shared/httpd/${workspaceFolderBasename}": "${workspaceFolder}"
            },
            "stopOnEntry": false,
            "log": false,
